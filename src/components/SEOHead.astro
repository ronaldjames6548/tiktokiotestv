---
// src/components/SEOHead.astro
// This component should be included in your Layout.astro <head>

const pathname = Astro.url.pathname;

// Define the ONLY pages that should be indexed
const allowedPages = [
  '/',
  '/musically-down',
  '/musically-down/',
  '/savetik-downloader-download-tiktok-videos-without-watermark',
  '/savetik-downloader-download-tiktok-videos-without-watermark/',
  '/blog/how-to-save-tiktok-videos-without-watermark',
  '/blog/how-to-save-tiktok-videos-without-watermark/',
];

// Check if current page should be indexed
const shouldIndex = allowedPages.some(allowed => {
  return pathname === allowed || pathname.replace(/\/$/, '') === allowed.replace(/\/$/, '');
});
---

{!shouldIndex && (
  <>
    <meta name="robots" content="noindex, nofollow" />
    <meta name="googlebot" content="noindex, nofollow" />
  </>
)}
