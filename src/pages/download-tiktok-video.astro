---
// src/pages/download-tiktok-video.astro
// Updated: i18n restored. SEO/props aligned with ui.ts keys (e.g., 'site.dtv_title').

import Container from "../components/container.astro";
import Faq from "../components/faq.astro";
import Features from "../components/dtvfeatures.astro";
import Hero from "../components/dtv-hero.astro";
import Layout from "../layouts/Layout.astro";

// i18n: Per-page
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const safeUrl = Astro.url || new URL('/', Astro.site || 'http://localhost:4321');
const lang = getLangFromUrl(safeUrl);
const t = useTranslations(lang);

// SEO from ui.ts
const title = t('site.dtv_title') ?? 'Tiktokio - Download TikTok Video Online Without Watermark easily';
const description = t('site.dtv_description') ?? 'Easily download TikTok videos without watermark with Tiktokio free Tiktok downloader. Save Tiktok video in MP4 format. No sign-up, free downloads on all device.';
const keywords = t('site.dtv_keywords') ?? 'TikTokio, download TikTok video without watermark, TikTok video downloader online, free TikTok downloader, download TikTok videos online, save TikTok videos without watermark';
const image = '/images/how-to-download-tiktok-video-with-tiktokio.webp';
const variant = 'dtv';
---

<Layout title={title} description={description} keywords={keywords} image={image} variant={variant} lang={lang}>
  <Hero />
      <Container>
		<Features />
		<Faq />
		</Container>
</Layout>