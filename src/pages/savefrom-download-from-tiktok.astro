---
import Container from "../components/container.astro";
import Layout from "../layouts/Layout.astro";  // Single import
import Hero from "../components/savefrom-hero.astro";
import Features from "../components/savefrom-features.astro";
import Newsletter from "../components/savefrom-newsletter.astro";
import Logos from "../components/logos.astro";
import Faq from "../components/savefrom-faq.astro";

// Homepage SEO/props
const title = 'SaveFrom TikTok Video Download - Tiktok Downloader Without Watermark';
const description = 'SaveFrom download TikTok video tool Free online tiktok downloader videos without watermarks. Tiktok Video Downloader with No login. Save fast, perfect for quick TikTok clips!';
const keywords = 'SaveFrom, SaveFrom downloader, download from tiktok, online video downloader, tiktokio, free downloader, social media saver';
const image = '/images/tiktokio-logo.webp';
const variant = 'index';  // Special for homepage (e.g., full-width hero)
---

<Layout title={title} description={description} keywords={keywords} image={image} variant={variant}>
  <!-- Hero in slot (full homepage hero) -->
  <Fragment slot="hero">
    <Hero />
  </Fragment>
  
  <Container>
    <!-- Features in default slot for index -->
    <Features />
    <Logos />
    <Newsletter />
    <Faq />
  </Container>
</Layout>