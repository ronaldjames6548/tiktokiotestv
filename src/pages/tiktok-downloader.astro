---
// src/pages/tiktok-downloader.astro
// Updated: i18n restored. SEO/props aligned with ui.ts keys (e.g., 'site.td_title').

import Container from "../components/container.astro";
import Faq from "../components/faq.astro";
import Features from "../components/tdfeatures.astro";
import Hero from "../components/td-hero.astro";
import Layout from "../layouts/Layout.astro";

// i18n: Per-page
import { getLangFromUrl, useTranslations } from "../i18n/utils";
const safeUrl = Astro.url || new URL('/', Astro.site || 'http://localhost:4321');
const lang = getLangFromUrl(safeUrl);
const t = useTranslations(lang);

// SEO from ui.ts
const title = t('site.td_title') ?? 'Tiktokio - TikTok Downloader - TikTok Video Downloader No Watermark';
const description = t('site.td_description') ?? 'Download TikTok videos online free with fast and secure Tiktokio - TikTok downloader. Save videos without watermark in mp4. No signup, use it free anywhere.';
const keywords = t('site.td_keywords') ?? 'TikTokio, TikTok downloader without watermark, save TikTok videos online, how to download TikTok videos, best TikTok downloader tool, TikTok downloader website, TikTok video downloader app, free TikTok video saver. download TikTok MP4';
const image = '/images/tiktok-downloader-tiktokio.webp';
const variant = 'td';
---

<Layout title={title} description={description} keywords={keywords} image={image} variant={variant} lang={lang}>
  <Hero />
  <Container>
    <Features />
    <Faq />
  </Container>
</Layout>